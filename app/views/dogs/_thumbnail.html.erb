<div>
  <a href="<%= url_for(dog) %>">
    <article>
      <h2 class="dog-name"><%= dog.name %></h2>
      <%= image_tag url_for(dog.images.first), class: "dog-photo index-image", alt: "Photo of #{dog.name}" %>
    </article>
  </a>
</div>

<% @dog_count += 1 %>

<% if @dog_count.even? %>
  <%= image_tag "ad.jpg", class: "grid-item index-image" %>
<% end %>
